---
import type { CollectionEntry } from 'astro:content'
import { extractTitle } from 'src/lib/content'

interface Props {
  project: CollectionEntry<'work' | 'posts'>
}

const { data, slug, collection } = Astro.props.project
---

<a class='card' href={`/${collection}/${slug}`}>
  <span class='title'>{extractTitle(data)}</span>
  <img
    src={'img' in data ? data.img : data.banner}
    alt={('img' in data ? data.img_alt : data.banner_alt) || ''}
    loading='lazy'
    decoding='async'
  />
</a>

<style>
  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 11rem;
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    font-weight: 500;
  }

  .card:hover {
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
  }

  img {
    grid-area: 1 / 1 / 3 / 3;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: 1.5rem;
    }

    .title {
      border-radius: 0.9375rem;
    }
  }
</style>
